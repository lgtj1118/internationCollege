	function changeselect(){
	  var type=$("#secondlanguagetype").val();
	  var slt=document.getElementById("secondlanguagelevel"); 
	  //slt.options.remove();
	  $('#secondlanguagelevel').empty().append( $("<option value='' >---请选择语言级别---</option>") );
	 if(type=="英语"){
	     var objOption=document.createElement("OPTION"); 
         var objOption1=document.createElement("OPTION"); 
         objOption.value='四级';  
         objOption.text='四级';
         objOption1.value='六级';  
         objOption1.text='六级';  
         slt.add(objOption);
         slt.add(objOption1);  
	 }else if(type=="日语"){
	     var objOption=document.createElement("OPTION"); 
         var objOption1=document.createElement("OPTION");
         var objOption2=document.createElement("OPTION"); 
         objOption.value='一级';  
         objOption.text='一级';
         objOption1.value='二级';  
         objOption1.text='二级';
         objOption2.value='三级';  
         objOption2.text='三级';  
         slt.add(objOption);
         slt.add(objOption1);  
         slt.add(objOption2);  
	 }
	}

	var flg1 = true;
	function checkmobile(){
		var isMobile = /^(?:13\d|15\d|18\d)\d{5}(\d{3}|\*{3})$/; //手机号码验证规则
		var mobile = $("#telephone").val();
		if (mobile.length == 0) {
			$("#result1").html("手机号码不能为空!");
			$("#result1").show();
			//$("#telephone").focus();       //输入框获得光标
			flg1 = false; //就弹出提示信息        
		} else {
			$("#result1").hide();
			if (!isMobile.test(mobile)) { //如果用户输入的值不同时满足手机号的正则
				$("#result1").html("请输入正确的11位手机号!");
				$("#result1").show();
				//$("#telephone").focus();       //输入框获得光标
				flg1 = false; //就弹出提示信息        
			} else {
				$("#result1").hide();
				flg1 = true;
			}
		}
	}
	var flg2 = false;
	function checkemail(){
		var email = $("#email").val();
		if (email.length == 0) {
			$("#result2").html("邮箱地址不能为空!");
			$("#result2").show();
			//$("#email").focus(); //输入框获得光标
			flg2 = false; //就弹出提示信息
		} else {
			$("#result2").hide();
			if (!$("#email").val().match(/^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/)) {
				$("#result2").html("请输入正确的邮箱地址!");
				$("#result2").show();
				//$("#email").focus(); //输入框获得光标
				flg2 = false; //就弹出提示信息   
			} else {
				$("#result2").hide();
				flg2 = true;
			}
		}
	}
	var flg = true;
	function check(){
		var type = $("#secondlanguagetype option:selected").val();
		var level = $("#secondlanguagelevel option:selected").val()
		if (type.length == 0 || level.length == 0) {
			$("#result").html("请选择语言或级别!");
			$("#result").show();
			flg = false;
		} else
			$("#result").hide();
	}
	var flg3 = false;
	function checkname(){
		var name = $("#name").val();
		var reg = /[\u4e00-\u9fa5]/g;
		if (name.length == 0) {
			$("#result3").html("名字不能为空!");
			$("#result3").show();
			flg3 = false;
		} else {
			$("#result3").hide();
			if (!reg.test(name)) {
				$("#result3").html("请填写中文名!");
				$("#result3").show();
				flg3 = false;
			} else {
				$("#result3").hide();
				flg3 = true;
			}
		}
	}
	var flg4 = false;
	function checknation(){
		var name = $("#nation").val();
