		if (name.length == 0) {
			$("#result4").html("民族不能为空!");
			$("#result4").show();
			flg4 = false;
		} else {
			$("#result4").hide();
			if (!reg.test(name)) {
				$("#result4").html("请填写中文!");
				$("#result4").show();
				flg4 = false;
			} else {
				$("#result4").hide();
				flg4 = true;
			}
		}
	}
	var flg5 = false;
	function checkmajor(){
		var name = $("#major").val();
		if (name.length == 0) {
			$("#result5").html("专业不能为空！");
			$("#result5").show();
			flg5 = false;
		} else {
			var reg = /^[\u4e00-\u9fa5]+$/gi;
			if (!reg.test(name)) {
				$("#result5").html("专业只能为中文！");
				$("#result5").show();
				flg5 = false;
			} else {
				$("#result5").hide();
				flg5 = true;
			}
		}
	}
	var flg6 = false;
	function checkbrith(){
		var date = new Date();
		var year = date.getFullYear();
		var month = date.getMonth();
		var daty = date.getDate();
		var start = year+"-"+month+"-"+day;
		
		var brithdate = $("#brithdate").val();
		var d1 = new Date(start.replace(/\-/g, "\/"));
		var d2 = new Date(brithdate.replace(/\-/g, "\/"));
		if (brithdate.length == 0) {
			$("#result6").html("出生日期不能为空！");
			$("#result6").show();
			flg6 = false;
		} else {
			if (start != "" && brithdate != "" && d2 >= d1) {
				$("#result6").html("出生日期填写有误！");
				$("#result6").show();
				flg6 = false;
			} else {
				$("#result6").hide();
				flg6 = true;
			}
		}
	}
	var flg7 = false;
	function checknum(){
		var stunum = $("#assistnum").val();
		if (stunum.length == 0) {
			$("#result7").html("学号不能为空！");
			$("#result7").show();
			flg7 = false;
			return false;
		} else {
			$("#result7").hide();
			if (isNaN(stunum)) {
				$("#result7").html("学号只能为数字！");
				$("#result7").show();
				flg7 = false;
				return false;
			} else {
				$("#result7").hide();
				flg7 = true;
			}
		}
	}
	var flg8 = false;
	function checkclass(){
		var stunum = $("#classname").val();
		if (stunum.length == 0) {
			$("#result8").html("班级不能为空！");
			$("#result8").show();
