		<tr><th colspan="2"></th>
		<%
			List<Syllabus> courses = (List<Syllabus>) ActionContext.getContext().get("arrangedCourses");
			Integer roomCount = (Integer) ActionContext.getContext().get("roomCount");
			List<String> order = (List<String>) ActionContext.getContext().get("rooms");
			String week[] = new String[]{"一","二","三","四","五"};
			for (String room : order){
		%>
			<th><%=room %></th>
		<% } %>
		</tr>
			<tr>
		<%
			int count = roomCount - 1;
			int day = 0;
			int slot = 0;
			for (Syllabus course : courses) {
				if (count == roomCount - 1){
					count = 0 ;
					if (slot == 5){
						slot = 0;
						day++;
					}
					if (slot == 0){
		%>
					</tr> <tr><td rowspan="5"> <%=new String("周" + week[day]) %></td> <td><%=new String("第" + week[slot] + "大节")%>  </td> <td><%=course.getCourseName() %> </td>
		<%			}else{
		%>
					</tr> <tr><td><%=new String("第" + week[slot] + "大节") %></td><td><%=course.getCourseName() %> </td>
		<%
					}
					slot++;
				} else {
		 %>
					<td><%=course.getCourseName() %></td>
		 <%
				} count ++;
			}
		%>
		<td rowspan="1">
	</table>
