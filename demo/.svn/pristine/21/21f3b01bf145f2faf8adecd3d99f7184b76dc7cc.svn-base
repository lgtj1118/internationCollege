html{margin:0;padding:0}
body{background-color:#ededed;color:#b5b5b5;margin:0;padding:0}

a{color:#b5b5b5;cursor:pointer;text-decoration:none}
a:hover{color:#c1272d}
h1,h2,h3,h4,h5,h6,form,div,p,i,img,ul,li,ol,table,tr,td,dl,dt,dd,fieldset,label,legend{margin:0;padding:0}
ul li{list-style:none}
fieldset,img,table{border:none}
td{font-size:12px;line-height:180%}
form{margin:0px;padding:0px}
*:focus{outline:none}
.clear{clear:both}
.hide{display:block;overflow:hidden;text-indent:-900px}
/*主体部分*/
.main{
	background:url("../images/header_bg.png") top repeat-x;
	min-width:1000px;
	overflow:hidden;
	width:100%;
	height:auto
}
.top{
	margin:123px 36% 0;
	width:100%;
}
.container{
	margin:200px auto 0;
	width:423px;
	height:400px;
	border:1px solid #ededed;
	background:#fff;
}
.header{
	background:url("../images/logo_ico.png") no-repeat top left;
	
	width:50px;
	float:left;
	height:41px
}
.headtitle{
	float:left;
	margin-top:5px;
}
/*中部内容部分*/
.content{
	background:url("../images/login_bg.png") no-repeat top center;
	margin:200px auto 0;
	width:423px;
	height:366px;
	border:1px solid #ededed
}
.title{
	background:url("../images/member_title.png") no-repeat top left;
	margin:37px auto 20px;
	width:229px;
	height:36px
}
.title1{
	background:url("../images/member_title1.png") no-repeat top left;
	margin:37px auto 20px;
	width:229px;
	height:36px
}
.input{
	margin:0 auto 11px;
	width:237px
}
.select{
	background:url("../images/input_name.png") no-repeat   ;
	background: transparent;
   width: 268px;
   padding: 5px;
   font-size: 16px;
   border: 1px solid #ccc;
   height: 34px;
}

.input_all{
	border:none;
	color:#555;
	font-size:14px;
	line-height:30px;
	padding:10px 0 10px 46px;
	vertical-align:middle;
	width:237px;
	height:30px
}
.name{
	background:url("../images/input_name.png") no-repeat top left
}
.name_now{
	background:url("../images/input_name_hover.png") no-repeat top left
}
.password{
	background:url("../images/input_password.png") no-repeat top left
}
.password_now{
	background:url("../images/input_password_hover.png") no-repeat top left
}
.enter{
	margin-top:15px
}
.button{
	background:url("../images/button.png") no-repeat center;
	border:none;
	cursor:pointer;
	margin:0 auto;
	width:150px;
	height:55px
}
.checkbox{
	font-size:12px;
	margin:0 auto;
	width:237px;
	height:30px
}
.checkbox input{
	display:block;
	float:left;
	margin-right:4px
}
.checkbox span{
	display:block;
	float:left;
	xheight:20px;
	line-height:20px;
	*line-height:22px
}